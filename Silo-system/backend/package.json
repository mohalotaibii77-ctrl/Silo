{
  "name": "silo-backend",
  "version": "1.0.0",
  "description": "Silo Restaurant Operating System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration:inventory": "npx ts-node tests/integration/inventory.test.ts",
    "test:integration:products": "npx ts-node tests/integration/products.test.ts",
    "test:integration:pos": "npx ts-node tests/integration/pos.test.ts",
    "test:integration:users": "npx ts-node tests/integration/users.test.ts",
    "test:integration:business": "npx ts-node tests/integration/business.test.ts",
    "test:integration:delivery": "npx ts-node tests/integration/delivery.test.ts",
    "test:integration:config": "npx ts-node tests/integration/config.test.ts",
    "test:integration:superadmin": "npx ts-node tests/integration/superadmin.test.ts",
    "test:integration:hr": "npx ts-node tests/integration/hr.test.ts",
    "test:integration:bundles": "npx ts-node tests/integration/bundles.test.ts",
    "test:integration:discounts": "npx ts-node tests/integration/discounts.test.ts",
    "test:integration:categories": "npx ts-node tests/integration/categories.test.ts",
    "test:integration:all": "npm run test:integration:inventory && npm run test:integration:products && npm run test:integration:pos && npm run test:integration:users && npm run test:integration:business && npm run test:integration:delivery && npm run test:integration:config && npm run test:integration:superadmin && npm run test:integration:hr && npm run test:integration:bundles && npm run test:integration:discounts && npm run test:integration:categories",
    "test:inventory": "npm run test:integration:inventory",
    "test:products": "npm run test:integration:products",
    "test:pos": "npm run test:integration:pos",
    "test:users": "npm run test:integration:users",
    "test:business": "npm run test:integration:business",
    "test:delivery": "npm run test:integration:delivery",
    "test:config": "npm run test:integration:config",
    "test:superadmin": "npm run test:integration:superadmin",
    "test:hr": "npm run test:integration:hr",
    "test:bundles": "npm run test:integration:bundles",
    "test:discounts": "npm run test:integration:discounts",
    "test:categories": "npm run test:integration:categories",
    "test:all": "npm run test:unit && npm run test:integration:all"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20"
  }
}

